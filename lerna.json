{
  "packages": ["packages/*"],
  "version": "independent",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "conventionalCommits": true,
      "graphType": "all",
      "registry": "https://registry.npmjs.org/",
      "message": "chore: publish",
      "ignoreChanges": ["**/*.spec.js", "**/*.spec.js.snap", "**/*.md"]
    }
  }
}
